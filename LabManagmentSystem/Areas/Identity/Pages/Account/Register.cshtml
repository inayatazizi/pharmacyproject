@page
@model RegisterModel
@{
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-4 col-md-6 offset-md-3 " style="height: 480px; border-radius:50px">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12">
                    <div class="p-2">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 ">Create an Account!</h1>
                        </div>
                        <form class="user" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" asp-for="Input.FirstName" class="form-control form-control-user" id="exampleFirstName"
                                           placeholder="First Name">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" asp-for="Input.LastName" class="form-control form-control-user" id="exampleLastName"
                                           placeholder="Last Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="email" asp-for="Input.Email" class="form-control form-control-user" id="exampleInputEmail"
                                       placeholder="email@gmail.com">
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" asp-for="Input.Password" class="form-control form-control-user"
                                           id="exampleInputPassword" placeholder="Password">
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" asp-for="Input.ConfirmPassword" class="form-control form-control-user"
                                           id="exampleRepeatPassword" placeholder="Repeat Password">
                                </div>
                            </div>
                            <button  type="submit" class="btn btn-primary  btn-user btn-block w-75 ml-5">Register Account</button>
                            @*<hr>
                            <a href="#" class="btn btn-google btn-user btn-block w-75 ml-5">
                                <i class="fab fa-google fa-fw"></i> Register with Google
                            </a>
                            <a href="#" class="btn btn-facebook btn-user btn-block w-75 ml-5">
                                <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                            </a>*@
                        </form>
                        <hr>
                        <div class="text-center ml-5 float-left ">
                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                        </div>
                        <div class="text-center ">
                            <a class="small" href="/Identity/Account/Login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


