@model IEnumerable<LabManagmentSystem.Models.Test>

@{
    ViewData["Title"] = "TestDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <h1 class="font-weight-bold mt-3 ml-3 text text-center">Test Details </h1>
</div>
<div class="col-md-12">
    <p class="text-lg-right ">
        <a asp-action="AddTest" class="btn float-right  " style="background-color: rgb(50,65,72); color:white">Add New Test</a>
    </p>
</div>
<div class="col-md-12 mt-2">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-hover font-weight-bold ">
                <th>
                    Test Code 
                </th>
                <th>
                   Test Name 
                </th>
                <th>
                   Test Description
                </th>
                <th>
                    Test Price)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestPrice)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TestId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TestId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TestId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
