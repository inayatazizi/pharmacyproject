@model LabManagmentSystem.ViewModels.ManageUserRoles
@{ 
    ViewData["Title"] = "Edit";
}
<h1>Manage User Roles</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.AppUser.Id" />
                <label asp-for="@Model.AppUser.Email">@Model.AppUser.Email</label>
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.roles.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.roles[i].Value" />
                    <label asp-for="@Model.roles[i].Selected">@Model.roles[i].Text</label>

                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary"/>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <a asp-action="Index"> Back to list</a>
</div>