@model PathologyLabManagment.Models.PatientSignUp

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="font-weight-bold text-center pt-2">Patient Details Update</h3>
<div class="col-md-12 ">
    <a asp-action="PatientSignUpDeatails" class="btn btn-dark float-right  font-weight-bold">Back to List</a>
</div>
<div class="row container p-0 m-0">
    <form asp-action="Update" asp-controller="Patient" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-12 p-0 m-0">
            <div class="row p-0 m-0">
                <input type="hidden" asp-for="Patient_Id" />
                <div class="form-group col-md-4">
                    <label asp-for="FirstName" class="control-label font-weight-bold">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label font-weight-bold">Middle Name</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label font-weight-bold">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row p-0 m-0">
                <div class="form-group col-md-4">
                    <label asp-for="Age" class="control-label font-weight-bold"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Sex" class="control-label font-weight-bold"></label>
                    <input asp-for="Sex" class="form-control" />
                    <span asp-validation-for="Sex" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="MobileNo" class="control-label font-weight-bold"></label>
                    <input asp-for="MobileNo" class="form-control" />
                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                </div>
            </div>
            <div class="row p-0 m-0">
                <div class="form-group col-md-6">
                    <label asp-for="Address" class="control-label font-weight-bold"></label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label font-weight-bold"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row p-0 m-0">

                <div class="form-group col-md-6">
                    <label asp-for="AppointDate" class="control-label font-weight-bold"></label>
                    <input asp-for="AppointDate" class="form-control" />
                    <span asp-validation-for="AppointDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="AppointTime" class="control-label font-weight-bold"></label>
                    <input asp-for="AppointTime" class="form-control" />
                    <span asp-validation-for="AppointTime" class="text-danger"></span>
                </div>
            </div>
            <div class="row ">
                <div class="form-group  ">
                    <input type="submit" value="Update" class="btn btn-success  float-right font-weight-bold" />
                </div>
         </div>
        </div>
    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
