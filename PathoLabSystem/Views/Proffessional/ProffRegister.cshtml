@model PathoLabSystem.Models.Proffessional

@{
    ViewData["Title"] = "ProffRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row container">
    <h2 class="text-center mt-2">Proffessional</h2>
    <div class="col-md-2 offset-md-8">
        <a asp-action="ProfDetails" class="btn btn-dark float-right btn-block">Back to List</a>
    </div>
    <hr />
    <div class="col-md-8 offset-md-2">
        <form asp-action="ProffRegister" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-4 offest-md-1 font-weight-bold" >
                    <label asp-for="Name" class="control-label">Name:</label>
                    <div class="input-group">
                        <div class="input-group-text"><i class="fas fa-user"></i></div>
                        <input asp-for="Name" class="form-control form-control-user" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4 offest-md-1 font-weight-bold">
                    <label asp-for="Email " class="control-label"> E-mail:</label>
                    <div class="input-group">
                        <div class="input-group-text"><i class="fas fa-envelope-open"></i></div>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                  </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4 offest-md-1 font-weight-bold font-weight-bold">
                    <label asp-for="MobileNo" class="control-label">Mobile No:</label>
                    <div class="input-group">
                        <div class="input-group-text"><i class="fas fa-solid fa-mobile"></i></div>                        
                        <input asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4 offest-md-1 font-weight-bold">
                    <label asp-for="Department" class="control-label">Department </label>
                    <div class="input-group">
                        <div class="input-group-text"><i class="fas fa-building"></i></div>
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4 offest-md-2 font-weight-bold">
                    <label asp-for="Qualification" class="control-label">Qualification:</label>
                    <div class="input-group">
                        <div class="input-group-text"><i class="fas fa-graduation-cap"></i></div>
                        <input asp-for="Qualification" class="form-control" />
                        <span asp-validation-for="Qualification" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group col-md-4 offest-md-2 font-weight-bold">
                    <label asp-for="University" class="control-label">University:</label>
                    <div class="input-group">
                        <div class="input-group-text"> <i class="fas fa-university" aria-hidden="true"></i></div>                       
                        <input asp-for="University" class="form-control" />
                        <span asp-validation-for="University" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4 offest-md-2 font-weight-bold">
                    <label asp-for="Experince" class="control-label">Experince:</label>
                    <div class="input-group">
                        <div class="input-group-text"><i class="fas fa-user-md"></i></div>
                        <input asp-for="Experince" class="form-control" />
                        <span asp-validation-for="Experince" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4 offest-md-2 font-weight-bold">
                    <label asp-for="Address" class="control-label">Address:</label>
                    <textarea class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-3 offset-md-6">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
