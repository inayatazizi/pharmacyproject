@model IEnumerable<PathoLabSystem.Models.Proffessional>

@{
    ViewData["Title"] = "ProfDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <h1 class="font-weight-bold mt-3 ml-3 text text-center">Proffesional Details </h1>
</div>
<div class="col-md-12">
    <p class="text-lg-right ">
        <a asp-action="ProffRegister" class="btn float-right  " style="background-color: rgb(50,65,72); color:white">Add New Proffesionals</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.University)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experince)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th> Operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experince)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfId" class="btn text-secondary "><i class="fas fa-marker" style="color:forestgreen"></i></a>
                <a asp-action="Delete" asp-route-id="@item.ProfId" class="btn text-danger"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
